{ config, lib, pkgs, ... }:

{

  environment.systemPackages = with pkgs; [
    git
    docker
    docker_compose
  ]; 

  boot.kernel.sysctl = {
    "vm.overcommit_memory" = 1;
    "net.core.somaxconn" = 65535;
  };

  virtualisation.docker.enable = true;
  virtualisation.docker.enableOnBoot = true;

  users.extraUsers.bahmni = {
    isSystemUser = true;
    createHome = true;
    home = "/home/bahmni";
    extraGroups = [ "docker" ];
  };

  users.extraUsers.msfocb = {
    extraGroups = [ "docker" ];
  };

  systemd.services.bahmni-docker = {
    enable = false;
    description = "Bahmni containers";
    requires = [ "docker.service" ];
    after = [ "docker.service" ];
#    wantedBy = [ "multi-user.target" ];
    serviceConfig = {
      User = "bahmni";
#      WorkingDirectory = "/home/bahmni/bahmni-docker";
      Restart = "always";
      RestartSec = 10;
      TimeoutSec = "infinity";
      ExecStart = "${pkgs.docker_compose}/bin/docker-compose up";
      ExecStop = "${pkgs.docker_compose}/bin/docker-compose down";
    };
  };
}

